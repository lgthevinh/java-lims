<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="502.0" prefWidth="755.0" spacing="10" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.controller.MainUserViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button onAction="#handleManageUsers" text="Add Users' Infor" />
                <Button text="Borrow Books" />
                <Button text="Return Books" />
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <TextField fx:id="searchField" promptText="Search Books" />
                <Button onAction="#handleSearch" text="Search" />
            </children>
        </HBox>
        <TableView fx:id="bookTable">
            <columns>
                <TableColumn fx:id="isbnColumn" prefWidth="56.0" text="ISBN" />
                <TableColumn fx:id="titleColumn" prefWidth="155.0" text="Title" />
                <TableColumn fx:id="authorColumn" prefWidth="111.0" text="Author" />
                <TableColumn fx:id="yearOfPublicationColumn" minWidth="0.0" prefWidth="139.0" text="Year of Publication" />
                <TableColumn fx:id="publisherColumn" prefWidth="147.0" text="Publisher" />
                <TableColumn fx:id="availableAmountColumn" prefWidth="106.0" text="Available Amount" />
            </columns>
        </TableView>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button onAction="#handleExit" prefHeight="25.0" prefWidth="57.0" text="Exit" />
                <Button onAction="#handleLogout" text="Logout" />
            </children>
        </HBox>
    </children>
</VBox>
