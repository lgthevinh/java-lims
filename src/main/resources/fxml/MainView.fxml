<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="502.0" prefWidth="926.0" spacing="10" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.controller.MainViewController">
    <padding>
        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button onAction="#handleManageBooks" text="Manage Books" />
                <Button onAction="#handleManageBorrowDetails" text="Manage Borrow Details" />
                <Button onAction="#handleManageLibrarians" text="Manage Librarians" />
                <Button onAction="#handleManageStudents" text="Manage Students" />
                <Button onAction="#handleManageUsers" text="Manage Users" />
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <TextField fx:id="searchField" promptText="Search Books" />
                <Button onAction="#handleSearch" text="Search" />
            </children>
        </HBox>
        <TableView fx:id="bookTable" prefHeight="366.0" prefWidth="886.0">
            <columns>
                <TableColumn fx:id="isbnColumn" prefWidth="140.0" text="ISBN" />
                <TableColumn fx:id="titleColumn" prefWidth="189.0" text="Title" />
                <TableColumn fx:id="authorColumn" prefWidth="105.0" text="Author" />
                <TableColumn fx:id="yearOfPublicationColumn" minWidth="0.0" prefWidth="171.0" text="Year of Publication" />
                <TableColumn fx:id="publisherColumn" prefWidth="142.0" text="Publisher" />
                <TableColumn fx:id="availableAmountColumn" prefWidth="138.0" text="Available Amount" />
            </columns>
        </TableView>
        <HBox alignment="CENTER" prefHeight="29.0" prefWidth="886.0" spacing="10">
            <children>
                <Button onAction="#handleExit" prefHeight="25.0" prefWidth="57.0" text="Exit" />
                <Button onAction="#handleLogout" text="Logout" />
            </children>
        </HBox>
    </children>
</VBox>
